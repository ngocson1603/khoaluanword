@model AddCameraViewModel
@{
    ViewData["Title"] = "Add Camera";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
	<div class="col-md-4">
		<form method="post">
			<h4>Create a new camera.</h4>
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Make"></label>
				<select asp-for="Make" asp-items="@Html.GetEnumSelectList<MakeType>()" class="form-control"></select>
				<span asp-validation-for="Make" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CameraModel"></label>
				<input asp-for="CameraModel" class="form-control" />
				<span asp-validation-for="CameraModel" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Price"></label>
				<input asp-for="Price" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Quantity"></label>
				<input asp-for="Quantity" min="0" max="100" class="form-control" />
				<span asp-validation-for="Quantity" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="MinShutterSpeed"></label>
				<input asp-for="MinShutterSpeed" min="1" max="30" class="form-control" />
				<span asp-validation-for="MinShutterSpeed" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="MaxShutterSpeed"></label>
				<input asp-for="MaxShutterSpeed" min="2000" max="8000" step="100" class="form-control" />
				<span asp-validation-for="MaxShutterSpeed" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="MinISO"></label>
				<select asp-for="MinISO" asp-items="@Html.GetEnumSelectList<MinISOType>()" class="form-control"></select>
				<span asp-validation-for="MinISO" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="MaxISO"></label>
				<input asp-for="MaxISO" min="200" max="409600" class="form-control"/>
				<span asp-validation-for="MaxISO" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="IsFullFrame"></label>
				@Html.RadioButtonFor(m => m.IsFullFrame, true) Yes
				@Html.RadioButtonFor(m => m.IsFullFrame, false) No
				<span asp-validation-for="IsFullFrame" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="VideoResolution"></label>
				<input asp-for="VideoResolution" class="form-control" />
				<span asp-validation-for="VideoResolution" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="LightMetering"></label>
				<input type="checkbox" name="LightMetering" value="@((int)LightMeteringType.centerWeighted)" /> Center Weighted
				<input type="checkbox" name="LightMetering" value="@((int)LightMeteringType.evaluative)" /> Evaluate
				<input type="checkbox" name="LightMetering" value="@((int)LightMeteringType.spot)" /> Spot
				<span asp-validation-for="LightMetering" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ImageURL"></label>
				<input asp-for="ImageURL" class="form-control" />
				<span asp-validation-for="ImageURL" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-default">Add Camera</button>
		</form>
	</div>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}

