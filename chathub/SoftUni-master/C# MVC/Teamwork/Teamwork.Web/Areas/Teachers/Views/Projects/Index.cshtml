@model IEnumerable<TeacherProjectsServiceModel>
@{
    ViewData["Title"] = "Index";
}

<h2>Projects</h2>

<div class="row">
	<div class="col-md-6">
		<ul class="list-group article-list">
			@foreach (var project in Model)
            {
				<li class="list-group-item">
					<a asp-action="Details" asp-route-id="@project.Id" asp-route-title="@project.Name">@project.Description</a>
				</li>
            }
		</ul>
	</div>
</div>

