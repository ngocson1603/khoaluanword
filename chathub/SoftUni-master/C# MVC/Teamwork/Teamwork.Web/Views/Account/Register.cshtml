@model RegisterViewModel
@{
	ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row well">
	<div class="col-md-4">
		<section>
			<form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
				<h4>Create a new account.</h4>
				<hr />
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Email"></label>
					<input asp-for="Email" class="form-control" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="ConfirmEmail"></label>
					<input asp-for="ConfirmEmail" class="form-control" />
					<span asp-validation-for="ConfirmEmail" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="FirstName"></label>
					<input asp-for="FirstName" class="form-control" />
					<span asp-validation-for="FirstName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Surname"></label>
					<input asp-for="Surname" class="form-control" />
					<span asp-validation-for="Surname" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Password"></label>
					<input asp-for="Password" class="form-control" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="ConfirmPassword"></label>
					<input asp-for="ConfirmPassword" class="form-control" />
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input asp-for="RegisterAsTeacher" class="form-control" />
					<label asp-for="RegisterAsTeacher"></label>
				</div>
				<button type="submit" class="btn btn-default">Register</button>
			</form>
		</section>
	</div>
	<div class="col-md-6 col-md-offset-2">
		<section>
			<h4>Self Assessment</h4>
			<hr />
			<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="2000">
				<ol class="carousel-indicators">
					<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
					<li data-target="#myCarousel" data-slide-to="1"></li>
					<li data-target="#myCarousel" data-slide-to="2"></li>
					<li data-target="#myCarousel" data-slide-to="3"></li>
				</ol>
				<div class="carousel-inner" role="listbox">
					<div class="item active">
						<img src="https://blog.cengage.com/wp-content/uploads/2015/09/five.secrets.of_.successful.college.students.jpg" width="600" alt="ASP.NET" class="img-responsive" />
					</div>
					<div class="item">
						<img src="http://taylormarshall.com/wp-content/uploads/2015/02/photodune-1303233-college-students-xs.jpg" width="600" alt="Visual Studio" class="img-responsive" />
					</div>
					<div class="item">
						<img src="http://globalaccessproject.com/wp-content/uploads/2015/01/iStock_confused-students.jpg" width="600" alt="Package Management" class="img-responsive" />
					</div>
					<div class="item">
						<img src="http://www.law.georgetown.edu/campus-life/dean-of-students/images/100413-GT-Law-2030.jpg" width="600" alt="Microsoft Azure" class="img-responsive" />
					</div>
				</div>
				<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
					<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
					<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</section>
	</div>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
