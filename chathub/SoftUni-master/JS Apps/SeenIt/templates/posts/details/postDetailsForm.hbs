<section id="viewComments">
    <div class="post">
        <div class="col thumbnail">
            <a href="{{url}}">
                <img src="{{imageUrl}}">
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href="{{url}}">{{title}}</a>
            </div>
            <div class="details">
                <p>{{description}}</p>
                <div class="info">
                    submitted {{date}} ago by {{author}}
                </div>
                {{#if isAuthor}}
                <div class="controls">
                    <ul>
                        <li class="action"><a class="editLink" href="#/posts/edit/{{_id}}">edit</a></li>
                        <li class="action"><a class="deleteLink" href="#/posts/delete/{{_id}}">delete</a></li>
                    </ul>
                </div>
                {{/if}}
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="post post-content">
        <form action="#/comments/create/{{postId}}" method="POST" id="commentForm">
            <label>Comment</label>
            <textarea name="content" type="text"></textarea>
            <input type="submit" value="Add Comment" id="btnPostComment">
        </form>
    </div>
    {{#each comments}}
        {{> commentForm}}
    {{else}}
        <p>No comments yet.</p>
    {{/each}}
</section>